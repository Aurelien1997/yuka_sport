<p id="notice"><%= notice %></p>

<div class = "container">
<h1 class="fw-light">Posts</h1>
</div>

<div class="container p-5 my-5 border">
<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to "Consulter l'article", post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
