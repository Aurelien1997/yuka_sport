<p id="notice"><%= notice %></p>

<div class = "container">
<h1 class="fw-light">Posts</h1>
</div>


<div class="album py-5">
<div class="container">
 <div class="row">
<% @posts.each do |post| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                <h3 class="display-7"><%= post.title %></h3>
                  <p class="card-text"><%= post.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to "Consulter l'article", post %>                    
                    </div>
                  </div>
                </div>
              </div>
            </div>
<% end %>
