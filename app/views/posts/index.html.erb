<p id="notice"><%= notice %></p>

<div class = "container">
<h1 class="fw-light">Posts</h1>
</div>


<div class="album py-5 bg-light ">
    <div class="container">
        <div class="row">
            <% @posts.each do |post| %>
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="card mb-4 box-shadow align-items-stretch">
                    <% if image_tag = "blog_image#{post.id}.webp" %>
                            <%= image_tag"blog_image#{post.id}.webp", :alt => "", :class => "card-img-top align-items-stretch", :style => "display: block; ;height: 20rem; width: 25rem"%>
                    <% else %>
                            <%= image_tag"nike.jpg", :alt => "", :class => "card-img-top", :style => "height: 100%; width: 100%; display: block;"%>
                    <% end %>                    
                    <div class="card-body">
                        <h3 class="display-7"><%= post.title %></h3>
                        <p class="card-text "><%= post.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                        <a class="btn btn-primary active mt-2 mb-4" href="<%=post_path(post.id)%>">DÃ©tails</a>
                        </div>
                        <small class="text-muted"><%= post.created_at.strftime("%d/%m/%Y") %></small>
            </div>
        </div>
    </div>
</div>
<% end %>


