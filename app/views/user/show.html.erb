
<section class="vh-50" style="background-color: #f7f9fb;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-md-9 col-lg-7 col-xl-5">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body md-4">
            <div class="d-flex text-black">
              <div class="flex-shrink-0">
                <img src="https://oasys.ch/wp-content/uploads/2019/03/photo-avatar-profil.png" alt="Generic placeholder image" class="img-fluid" style="width: 180px; border-radius: 10px;">
              </div>
              <div class="flex-grow-1 ms-3">
                <h3 class="mb-1">Profil utilisateur</h3> <br>
                <p class="card-title" style="color: #2b2a2a;"> <%= @user.email %></p>
                <br>
                <div class="d-flex pt-1">
                    <button type="button" class="btn btn-outline-primary flex-grow-1"> 
                      <% if current_user.id == @user.id %>
                      <%= link_to "Modifier mon mot de passe", edit_user_registration_path(@user.id) %>
                      <% end %>
                    </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
