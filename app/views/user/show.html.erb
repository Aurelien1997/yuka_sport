
<section class="vh-200" style="background-color: #f7f9fb; ">
  <div class="d-flex p-2 bd-highlight; d-flex justify-content-center"">
    <div class="card mb-3" style="max-width: 540px; border-radius: 15px;">
      <div class="row g-0; text-center">
        <div class="col-md-4">
          <img src="https://oasys.ch/wp-content/uploads/2019/03/photo-avatar-profil.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title">Profil utilisateur</h2>
            <p class="card-text"><%= @user.email %></p>
            <button type="button" class="btn btn-light">
              <% if current_user.id == @user.id %>
              <%= link_to "Modifier mon mot de passe", edit_user_registration_path(@user.id) %>
              <% end %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


 