<!DOCTYPE html>
<html>
<head>
  <title>Yukasport2203</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand px-2" href="#">LES ZOZOS</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse px-5" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link text-primary" href="#">Marques</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Blog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">A propos de nous</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-primary" href="#">Contact</a>
        </li>
      </ul>
    </div>
      <ul>
            <% if user_signed_in? %>

              <li>
                <%= current_user.email %>
              </li>

              <li>
                <%= link_to "Mon profil"%>
              </li>
              <li>
                <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete%>
              </li>

            <% else %>
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
              <li><a href="<%=new_user_session_path%>" class="btn btn-primary">Se connecter</a></li>
              <li><a href="<%=new_user_registration_path%>" class="btn btn-secondary">S inscrire</a></li>
            </ul>
            <% end %>
          </ul>
  </nav>

  <%= yield %>
      <footer class="footer font-small">
        <div class="container-fluid p-5">
          <div class="row">
            <div class="col-sm">
              Photo
            </div>
            <div class="col-sm">
              <div class="d-flex flex-row">
                <div class="col-md-4"><p>Mobile app</p></div>
                <div class="col-md-4 pr-5"><p>Community</p></div>
                <div class="col-md-4"><p>Company</p></div>
              </div>
            </div>
            <div class="col-sm text-end">
              © 2022, Made is love, Team THP
            </div>
          </div>
        </div>
      </footer>
</body>
</html> 