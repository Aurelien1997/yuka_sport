<div class="container" id="devise">
  <div class="row justify-content-center p-5">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto shadow-lg p-3 mb-5 bg-body rounded border border-3">
      <h2 class="text-center">Réinitialisez votre mot de passe</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render partial: 'devise/shared/error_messages', resource: resource %>
        <br>
        <p class="text-center">Entrez votre adresse e-mail ci-dessous et nous vous enverrons un lien pour réinitialiser votre mot de passe</p>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit "Envoyer", class: 'btn btn-primary btn-block btn-lg' %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>