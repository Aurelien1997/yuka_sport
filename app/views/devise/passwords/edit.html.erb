<div class="container" id="devise">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <h2 class="text-center">Changez votre mot de passe</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render partial: 'devise/shared/error_messages', resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: "Mot de passe" %>
          <% if @minimum_password_length %>
            <p class="text-muted"><small><%= @minimum_password_length %> minimum de caract√®res</small></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirmez le mot de passe" %>
        </div>

        <div class="form-group">
          <%= f.submit "Changer mon mot de passe", class: 'btn btn-primary btn-block btn-lg' %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>